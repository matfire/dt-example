{% extends "base.html.twig" %}

{% block body %}
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400" id="table">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Box
                </th>
                <th scope="col" class="px-6 py-3">
                    Date Derniere Transmission
                </th>
                <th scope="col" class="px-6 py-3">
                    Etat
                </th>
            </tr>
        </thead>
        <tbody>
            {% for box in boxes %}
                <tr data-href="/resources/box/{{box.getBOXID()}}" class="bg-white cursor-pointer border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="px-6 py-4">
                        {{box.getBOXID()}}
                    </td>
                    <td class="px-6 py-4">
                        {{box.getBOXLastComDate()|date}}
                    </td>
                    {% if currentTs - box.getBOXLastComDate() > factor *  box.getBOXTransmissionSampleRate() %}
                    <td class="px-6 py-4 bg-red-300">
                        Hors Ligne
                    </td>
                    {% else %}
                    <td class="px-6 py-4 bg-green-300">
                        En Ligne
                    </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block scripts %}
<script>
    document.querySelectorAll("tr[data-href]").forEach((el) => {
        el.addEventListener("click", () => {
            window.location = el.getAttribute("href")
        })
    })
</script>
{% endblock %}